# Example .env file for Store Monitoring API

# Project configuration
PROJECT_NAME="My Store API"
PROJECT_VERSION="1.0.0"
PROJECT_DESCRIPTION="Monitoring API for my store"
PROJECT_DOCS_URL="/api/docs"

# Database configuration
DB_USER="postgres"
DB_PASSWORD="postgres"
DB_HOST="postgres"
DB_PORT="5432"
DB_NAME="store_monitor"
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Celery configuration
CELERY_BROKER_URL="redis://:redis@redis:6379/0"

# CORS configuration
CORS_ORIGINS=["http://localhost:3000", "https://yourapp.com"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["Content-Type", "Authorization"]

# Note: Make sure to copy this file as .env and fill in the actual values for your setup.
